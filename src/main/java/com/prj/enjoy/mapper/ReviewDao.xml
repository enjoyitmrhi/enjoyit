<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prj.enjoy.review.dao.ReviewDao">

	<select id="review_list" resultType="com.prj.enjoy.review.dto.ReviewDto">
		SELECT RVTITLE, CUNUM,
		SBCODE, RVDATE, RVCONTENT, RVPIC, RVSTAR FROM REVIEW
	</select>
	<insert id="review_write">
		INSERT INTO
		REVIEW(RVTITLE,RVSTAR,RVCONTENT,RVPIC
		)
		VALUES(#{param1},#{param2},#{param3},#{param4})
	</insert>
	<insert id="reply">
		INSERT INTO REVIEW(BUID, RVCONTENT, RVGROUP,
		RVSTEP,
		RVINDENT)
		VALUES('b001', #{param2}, #{param3},
		#{param4}+1, #{param5}+1)
	</insert>
	<select id="reply_write" resultType="com.prj.enjoy.review.dto.ReviewDto">
		SELECT * FROM REVIEW WHERE
		BUNUM = #{param1}
	</select>
	<select id="reply_view" resultType="com.prj.enjoy.review.dto.ReviewDto">
		SELECT * FROM REVIEW WHERE
		BUNUM = #{param1}
	</select>
	<update id="replyShape">
		UPDATE REVIEW SET RVSTEP=RVSTEP+1 WHERE
		RVGROUP=#{param1} AND
		RVSTEP>#{param2}
	</update>
</mapper>
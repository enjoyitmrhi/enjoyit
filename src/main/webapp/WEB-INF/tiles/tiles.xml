<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- 화면의 기초가 되는 base -->
	<definition name="base" template="/WEB-INF/include/template.jsp">
		<put-attribute name="header" value="/WEB-INF/include/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/include/footer.jsp" />
	</definition>


	<definition name="*" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>

	<definition name="*/*" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

	<definition name="*/*/*" extends="base">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>



	<!-- 팝업용 -->
	<definition name="popup" template="/WEB-INF/include/withoutHF.jsp">
		<put-attribute name="body" value="" />
	</definition>

	<definition name="sale_board/reserv" extends="popup">
		<put-attribute name="body" value="/WEB-INF/views/sale_board/reserv.jsp" />
	</definition>

	<definition name="login/onSchedule" extends="popup">
		<put-attribute name="body" value="/WEB-INF/views/login/onSchedule.jsp" />
	</definition>



</tiles-definitions> 